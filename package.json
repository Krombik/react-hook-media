{
  "name": "react-hook-media",
  "version": "1.2.0",
  "description": "A lightweight and tree-shakable library for working with media queries in React applications, providing responsive behavior and conditional rendering based on media query conditions.",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Krombik/react-hook-media.git"
  },
  "author": "Andrii Dubetskyi",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Krombik/react-hook-media/issues"
  },
  "homepage": "https://github.com/Krombik/react-hook-media#readme",
  "type": "module",
  "source": "src/index.ts",
  "scripts": {
    "build": "tsup",
    "watch": "tsup --watch",
    "release": "tsup && npm publish ./build"
  },
  "peerDependencies": {
    "@types/react": ">=16.8.0",
    "react": ">=16.8.0"
  },
  "peerDependenciesMeta": {
    "@types/react": {
      "optional": true
    }
  },
  "devDependencies": {
    "@types/node": "^20.14.2",
    "@types/react": "^18.3.3",
    "prettier": "^3.5.1",
    "tsup": "^8.3.6",
    "typescript": "^5.7.3"
  },
  "engines": {
    "node": ">10"
  },
  "keywords": [
    "react",
    "matchMedia",
    "media queries",
    "responsive",
    "conditional rendering",
    "SSR"
  ],
